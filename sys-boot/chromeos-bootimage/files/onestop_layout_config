# Required fields for pack_firmware_image
ENTRIES = [
  EntryBlob(name='FW_MAIN',
        offset=0x00000000,
        length=0x0007df00,
        flags=FMAP_AREA_STATIC | FMAP_AREA_COMPRESSED,
        path=U_BOOT_IMAGE),
  EntryKeyBlock(name='VBLOCK',
        offset=0x0007df00,
        length=0x00002000,
        flags=FMAP_AREA_STATIC,
        keyblock=KEYBLOCK,
        signprivate=SIGNPRIVATE,
        version=1,
        fv=U_BOOT_IMAGE,
        kernelkey=KEYDIR + 'kernel_subkey.vbpubk'),
  EntryBlobString(name='FIRMWARE_ID',
        offset=0x0007ff00,
        length=0x00000100,
        flags=FMAP_AREA_STATIC,
        value=FWID_STRING),
]
