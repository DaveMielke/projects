	media-sound/adhd
	virtual/pkgconfig
	x11-libs/libdrm"

src_prepare() {
	export DBUS=0
	export TARGET=frecon-lite
	cros-workon_src_prepare
}

src_configure() {
	asan-setup-env
	cros-workon_src_configure
}

src_compile() {
	cros-workon_src_compile
}

src_install() {
	cros-workon_src_install
	default
}
