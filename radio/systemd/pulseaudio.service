[Unit]
Description=Sound Service

#Requires=pulseaudio.socket

[Service]
# Note that notify will only work if --daemonize=no
Type=simple
ExecStart=/usr/bin/pulseaudio --daemonize=no --system --disallow-exit --disable-shm --high-priority --realtime
Restart=on-failure

[Install]
#Also=pulseaudio.socket
WantedBy=sound.target
