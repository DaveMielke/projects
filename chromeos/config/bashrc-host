cros_env_frag_lookup() {
	local overlay="/usr/local/portage/chromiumos"
	local config_root="${overlay}/chromeos/config"
	local env_file="${config_root}/env/${CATEGORY}/${PN}"
	[[ -e ${env_file} ]] && source "${env_file}"
}
cros_env_frag_lookup
