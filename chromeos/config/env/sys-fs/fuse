# fusermount is relying on setuid to perform mount/umount tasks. Chrome OS'
# FUSE usage doesn't require fusermount, so don't install it to avoid risk.
fuse_mask="
  /usr/bin/fusermount
"

INSTALL_MASK+=" ${fuse_mask}"
PKG_INSTALL_MASK+=" ${fuse_mask}"
unset fuse_mask
