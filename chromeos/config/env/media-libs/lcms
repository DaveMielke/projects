# lcms does not build with gold in fuzzer builds, https://crbug.com/927356.
# Force bfd for amd64 since bfd does not support --fix-cortex-a53-843419
cros_pre_src_prepare_use_bfd_linker() {
	use amd64 && LDFLAGS+=" -fuse-ld=bfd"
}
