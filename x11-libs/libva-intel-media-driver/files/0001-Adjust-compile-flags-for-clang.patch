@@ -215,3 +215,10 @@ if (DEFINED MEDIA_VERSION)
 elseif (DEFINED ENV{MEDIA_VERSION})
     add_definitions(-DUFO_VERSION="$ENV{MEDIA_VERSION}")
 endif()
