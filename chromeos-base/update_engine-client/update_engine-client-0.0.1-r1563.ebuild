CROS_WORKON_TREE=("ea6e2e1b6bec83695699ef78cec2f03321d97dd7" "dc1506ef7c8cfd2c5ffd1809dac05596ec18773c" "aeee8fbf90e9e7044284a16cbdf08152f36fe710")
CROS_WORKON_LOCALNAME=("platform2" "aosp/system/update_engine")
