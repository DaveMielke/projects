CROS_WORKON_TREE=("b1c6245dddc7b5e10da108b13f7c3883aa0b6c2c" "957cd340def64e10a69a5c56285e40df001dad6a" "933f0271b1e165dd2cf312b75f832c6d423a8e74" "e7dba8c91c1f3257c34d4a7ffff0ea2537aeb6bb")
CROS_WORKON_LOCALNAME="platform2"
