CROS_WORKON_COMMIT="d5e70979b3f1a7e9cf3a4270b9302c09bf1ee5e7"
CROS_WORKON_TREE="232e26bf4d020222e39b124e598af15719384311"
CROS_WORKON_PROJECT="chromiumos/platform2"
