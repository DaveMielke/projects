EAPI=6
CROS_WORKON_COMMIT="2a559712174dbf6cbda845c196882709d352a62f"
CROS_WORKON_TREE=("56c75aa73108d344f9441f26855f37e4c4838dd3" "a7ffd6cef4baefb8c0d32e55132eeeb90c842e4f" "6e28e99b37404a7ebc06eff44bd07f535f416514" "dc1506ef7c8cfd2c5ffd1809dac05596ec18773c")
CROS_WORKON_LOCALNAME="platform2"
