CROS_WORKON_COMMIT="d86d31f4c43703835ac24c602e7684fc72d7ea98"
CROS_WORKON_TREE=("f354d140e04d861ac5457214dd14961f6c512112" "91e8836a964edca97575e22e0e676fd99cd5faa1" "45896abe0e0dcdb08fbd21bd1942f8a980d240c4" "dc1506ef7c8cfd2c5ffd1809dac05596ec18773c")
CROS_WORKON_LOCALNAME="platform2"
