CROS_WORKON_COMMIT="d8a46578bfe0ef8ec31189bce5b42b18dc9cf0a7"
CROS_WORKON_TREE=("473665059c4645c366e7d3f0dfba638851176adc" "e378ca77690bca4c7fdce56f63b7efcf6544db6a" "31568d068a7c33e1c53ae7ae705f4d92a610b953" "e7dba8c91c1f3257c34d4a7ffff0ea2537aeb6bb")
CROS_WORKON_LOCALNAME="platform2"
