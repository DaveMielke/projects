EAPI=6
CROS_WORKON_COMMIT="cb62a6c9f8511eeafc02386429670d62b13fba01"
CROS_WORKON_TREE=("4e679a0b9a8f37e5b43b8fb759321d5f9ff803ed" "8d22ea55284103f0ee696bc5859e92d0d15c2631" "03eb3802d4b3fba1dc67bda90f75ef2bc57f9276" "dc1506ef7c8cfd2c5ffd1809dac05596ec18773c")
CROS_WORKON_LOCALNAME="platform2"
