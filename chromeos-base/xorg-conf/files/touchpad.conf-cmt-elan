# Configure touchpads to use the Chromium Multitouch (cmt) X input driver
Section "InputClass"
    Identifier      "touchpad"
    MatchIsTouchpad "on"
    MatchDevicePath "/dev/input/event*"
    Driver          "cmt"
    Option          "AccelerationProfile" "-1"
    Option          "Horizontal Resolution" "33"
    Option          "Vertical Resolution" "33"
EndSection
