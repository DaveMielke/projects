CROS_WORKON_TREE=("e006396a78a50f7c8fbb001f804e31ec4056d732" "443b4e95729f8db28943bf4231ecff8318a61ce7")
CROS_WORKON_PROJECT=(
	"chromiumos/platform/tast-tests"
	"chromiumos/platform/tast"
)
CROS_WORKON_LOCALNAME=(
	"platform/tast-tests"
	"platform/tast"
)
CROS_WORKON_DESTDIR=(
	"${S}"
	"${S}/tast-base"
)

